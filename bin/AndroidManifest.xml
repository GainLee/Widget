<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="perfecter.widget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BATTERY_STATS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver android:name=".TimeWidget"
            android:label="TimeWidget"
             >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/time" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="perfecter.gen.ACTION_TIME_CHANGED"/>
                <action android:name="perfecter.gen.ACTION_TIMEZONE_CHANGED"/>
            </intent-filter>
        </receiver>
        
        <receiver android:name=".PowerWidget"
            android:label="PowerWidget" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/power" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="perfecter.gen.ACTION_BATTERY_CHANGED"/>
            </intent-filter>
        </receiver>
        <service android:name="TimeService"></service>
        <receiver android:name="TimeChangedReceiver"></receiver>
        <receiver android:name="PowerChangedReceiver">
        </receiver>
    </application>

</manifest>